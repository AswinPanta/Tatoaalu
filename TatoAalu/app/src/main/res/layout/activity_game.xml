<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:lottie="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E">

    <!-- Fire/particle animated background -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/fireBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_rawRes="@raw/fire_particles"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:alpha="0.25"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Game View (hidden behind new UI) -->
    <com.tatoalu.hotpotato.GameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Circular Timer Progress -->
    <ProgressBar
        android:id="@+id/timerProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:progressDrawable="@drawable/timer_ring"
        android:max="100"
        android:rotation="-90"
        android:indeterminate="false"
        android:progress="100"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Animated Potato SVG -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/potatoAnim"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:lottie_rawRes="@raw/potato_glow"
        app:lottie_autoPlay="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Player Avatar (Top) -->
    <ImageView
        android:id="@+id/player1"
        android:src="@drawable/avatar_red"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@id/potatoAnim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Timer Text -->
    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ”¥ Hot Potato"
        android:textColor="#FFC107"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/potatoAnim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Lobby Countdown Text -->
    <TextView
        android:id="@+id/lobbyCountdownText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Lobby: 45s"
        android:textSize="18sp"
        android:textColor="#FFC107"
        android:fontFamily="sans-serif-medium"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/timerText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Player Status Text -->
    <TextView
        android:id="@+id/playerStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Waiting for players..."
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/lobbyCountdownText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Countdown Cue -->
    <TextView
        android:id="@+id/countdownCue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/countdown_started"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FF5722"
        android:fontFamily="sans-serif-black"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Start Game Button -->
    <Button
        android:id="@+id/startGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="Start Game"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#FF5722"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- End-screen buttons -->
    <LinearLayout
        android:id="@+id/endButtonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/restartButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_restart"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF5722"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_home"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FFC107"
            android:layout_marginHorizontal="4dp"/>

        <Button
            android:id="@+id/leaderboardButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_leaderboard"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF5722"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Outcome overlay -->
    <LinearLayout
        android:id="@+id/outcomeOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:background="#CC000000"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/fireImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/campfire"
            android:contentDescription="@string/app_name"/>

        <TextView
            android:id="@+id/outcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFC107"
            android:fontFamily="sans-serif-black"
            android:text="@string/winner_message"
            android:layout_marginTop="16dp"
            android:textAlignment="center"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>