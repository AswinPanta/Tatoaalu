<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context=".MusicalChairsActivity">

    <!-- Header Section -->
    <TextView
        android:id="@+id/gameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="ðŸª‘ Musical Chairs"
        android:textColor="@color/primary_yellow"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Game Status Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/statusCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gameTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/roundText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Round 1"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/playersLeftText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:text="4 players left"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/playersListText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="Players: Player 1, Player 2, Player 3, Player 4"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Status Text -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="Ready to start Round 1?"
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusCard" />

    <!-- Music Animation -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/musicAnimation"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusText"
        app:lottie_autoPlay="false"
        app:lottie_rawRes="@raw/music_notes"
        app:lottie_loop="true" />

    <!-- Chairs Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chairsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/musicAnimation">

        <!-- Chair 1 -->
        <ImageView
            android:id="@+id/chair1Image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_chair"
            app:layout_constraintBottom_toTopOf="@id/chair1Button"
            app:layout_constraintEnd_toStartOf="@id/chair2Image"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/chair1Button"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:text="Chair 1"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@id/chair1Image"
            app:layout_constraintStart_toStartOf="@id/chair1Image"
            app:layout_constraintTop_toBottomOf="@id/chair1Image" />

        <!-- Chair 2 -->
        <ImageView
            android:id="@+id/chair2Image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_chair"
            app:layout_constraintBottom_toTopOf="@id/chair2Button"
            app:layout_constraintEnd_toStartOf="@id/chair3Image"
            app:layout_constraintStart_toEndOf="@id/chair1Image"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/chair2Button"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:text="Chair 2"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@id/chair2Image"
            app:layout_constraintStart_toStartOf="@id/chair2Image"
            app:layout_constraintTop_toBottomOf="@id/chair2Image" />

        <!-- Chair 3 -->
        <ImageView
            android:id="@+id/chair3Image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_chair"
            app:layout_constraintBottom_toTopOf="@id/chair3Button"
            app:layout_constraintEnd_toStartOf="@id/chair4Image"
            app:layout_constraintStart_toEndOf="@id/chair2Image"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/chair3Button"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:text="Chair 3"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@id/chair3Image"
            app:layout_constraintStart_toStartOf="@id/chair3Image"
            app:layout_constraintTop_toBottomOf="@id/chair3Image" />

        <!-- Chair 4 -->
        <ImageView
            android:id="@+id/chair4Image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_chair"
            app:layout_constraintBottom_toTopOf="@id/chair4Button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/chair3Image"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/chair4Button"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:text="Chair 4"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@id/chair4Image"
            app:layout_constraintStart_toStartOf="@id/chair4Image"
            app:layout_constraintTop_toBottomOf="@id/chair4Image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Start Round Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/startRoundButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/primary_yellow"
        android:text="ðŸŽµ Start Round"
        android:textColor="@color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chairsContainer" />

    <!-- Flash Overlay for Elimination Animation -->
    <View
        android:id="@+id/flashOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF0000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Outcome Overlay -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/outcomeOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="32dp">

                <TextView
                    android:id="@+id/outcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="ðŸ† Player 1 wins!"
                    android:textColor="@color/primary_yellow"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/endButtonsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/restartButton"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:text="ðŸ”„ Restart"
                        android:textColor="@color/primary_yellow"
                        app:strokeColor="@color/primary_yellow" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/leaderboardButton"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:text="ðŸ† Scores"
                        android:textColor="@color/primary_yellow"
                        app:strokeColor="@color/primary_yellow" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/homeButton"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:text="ðŸ  Home"
                        android:textColor="@color/primary_yellow"
                        app:strokeColor="@color/primary_yellow" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>