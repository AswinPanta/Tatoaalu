<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />

    <application
        android:name="android.app.Application"
        android:label="Tato Aalu"
        android:icon="@drawable/potato"
        android:theme="@style/Theme.TatoAalu">
        <activity android:name="com.tatoalu.hotpotato.GameActivity"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity android:name="com.tatoalu.hotpotato.MusicalChairsActivity"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity android:name="com.tatoalu.hotpotato.MainActivity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LeaderboardActivity"
            android:exported="false"/>
    </application>
</manifest>